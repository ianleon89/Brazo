						if(cursor1>5) cursor1=1;
						break;
					case 4:	// ARRIBA
						cursor1 --;
						Tiempito(5);
						if(cursor1<1) cursor1=5;
						break;
					case 8:	// ENTER PANTALLA MENU
						switch(cursor1){
							case 1:		// Entra en Pantalla Medici√≥n
								seguir2=1;
